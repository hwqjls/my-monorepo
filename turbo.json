{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "build:dev": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "build:test": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "build:pro": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "dev": { "cache": false, "persistent": true },
    "lint": {},
    "lint:eslint": {},
    "lint:prettier": {},
    "lint:stylelint": {},
    "lint:lint-staged": {},
    "preview": { "dependsOn": ["preview"] },
    "clean": {},
    "prepare": {},
    "release": {},
    "commit": { "dependsOn": ["^commit"] }
  }
}
